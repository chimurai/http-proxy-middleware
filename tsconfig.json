{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2021",
      "es2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "incremental": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}
