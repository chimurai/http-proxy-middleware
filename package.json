{
  "name": "http-proxy-middleware",
  "version": "0.17.4",
  "description": "The one-liner node.js proxy middleware for connect, express and browser-sync",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf coverage",
    "lint": "node test/lint.js",
    "test": "npm run lint && mocha --recursive --colors --reporter spec",
    "cover": "npm run clean && istanbul cover ./node_modules/mocha/bin/_mocha -- --recursive",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --recursive --reporter spec && istanbul-coveralls && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chimurai/http-proxy-middleware.git"
  },
  "keywords": [
    "reverse",
    "proxy",
    "middleware",
    "http",
    "https",
    "connect",
    "express",
    "browser-sync",
    "gulp",
    "grunt-contrib-connect",
    "websocket",
    "ws",
    "cors"
  ],
  "author": "Steven Chim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chimurai/http-proxy-middleware/issues"
  },
  "homepage": "https://github.com/chimurai/http-proxy-middleware",
  "devDependencies": {
    "browser-sync": "^2.18.2",
    "chai": "^4.1.2",
    "connect": "^3.5.0",
    "coveralls": "^3.0.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "1.3.0",
    "opn": "^5.1.0",
    "standard": "^10.0.2",
    "ws": "^3.2.0"
  },
  "dependencies": {
    "http-proxy": "^1.16.2",
    "is-glob": "^4.0.0",
    "lodash": "^4.17.2",
    "micromatch": "^3.1.0"
  },
  "engines": {
    "node" : ">=4.0.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
